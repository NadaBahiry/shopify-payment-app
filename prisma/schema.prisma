generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

// Shopify OAuth session storage
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// Stryve-specific settings per merchant
model StryveSettings {
  id        String   @id @default(cuid())
  shop      String   @unique
  apiKey    String
  baseUrl   String   @default("")
  sandbox   Boolean  @default(true)
  debug     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Payment records for the App Proxy / Checkout UI Extension flow
model StryvePayment {
  id                String   @id @default(cuid())
  shop              String
  shopifyPaymentId  String   @unique
  shopifyOrderId    String?
  stryveOrderId     String?
  merchantReference String
  amount            String
  currency          String
  status            String   @default("pending")
  paymentUrl        String?
  callbackUrl       String?
  customerEmail     String?
  customerPhone     String?
  test              Boolean  @default(false)
  errorMessage      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
